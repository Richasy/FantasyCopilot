<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="FantasyCopilot.App.Controls.AppTitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="using:FantasyCopilot.App.Resources.Extension"
    xmlns:local="using:FantasyCopilot.App.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Rectangle Height="38" Fill="{ThemeResource LayerFillColorDefaultBrush}" />
        <StackPanel
            Padding="4"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                x:Name="BackButton"
                Padding="10,8"
                Background="Transparent"
                BorderThickness="0"
                Click="OnBackButtonClick"
                Visibility="{x:Bind _appViewModel.IsBackButtonShown, Mode=OneWay}">
                <local:FluentIcon FontSize="12" Symbol="ArrowLeft" />
            </Button>
            <Image
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="ms-appx:///Assets/StoreLogo.png" />
            <TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{ext:Locale Name=AppName}" />
        </StackPanel>
    </Grid>
</UserControl>
